{% extends 'base_public.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-black text-white">
    <div class="w-full max-w-md bg-neutral-900 p-8 rounded-2xl shadow-lg border border-neutral-800">
        <h1 class="text-2xl font-semibold mb-6 text-center tracking-wide">Se connecter</h1>

        {% if error %}
            <div class="bg-red-900/40 text-red-300 text-sm p-3 rounded-lg mb-4 border border-red-800">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="mb-4 text-sm text-neutral-400">
                Connecté en tant que 
                <span class="font-medium text-white">{{ app.user.userIdentifier }}</span>.
                <a href="{{ path('app_logout') }}" class="underline hover:text-gray-300 ml-1">Déconnexion</a>
            </div>
        {% endif %}

        <form method="post" class="space-y-5">
            <div>
                <label for="username" class="block text-sm font-medium mb-1 text-neutral-300">Email</label>
                <input 
                    type="email" 
                    value="{{ last_username }}" 
                    name="_username" 
                    id="username" 
                    class="w-full px-4 py-2 bg-neutral-800 border border-neutral-700 rounded-lg focus:ring-2 focus:ring-white focus:outline-none text-white placeholder-gray-500"
                    autocomplete="email" 
                    required 
                    autofocus
                >
            </div>

            <div>
                <label for="password" class="block text-sm font-medium mb-1 text-neutral-300">Mot de passe</label>
                <input 
                    type="password" 
                    name="_password" 
                    id="password" 
                    class="w-full px-4 py-2 bg-neutral-800 border border-neutral-700 rounded-lg focus:ring-2 focus:ring-white focus:outline-none text-white placeholder-gray-500"
                    autocomplete="current-password" 
                    required
                >
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button 
                class="w-full py-2 mt-4 bg-white text-black font-semibold rounded-lg hover:bg-neutral-200 transition duration-200"
                type="submit"
            >
                Se connecter
            </button>
        </form>

        {# Optionnel : remember me #}
        {#
        <div class="flex items-center mt-4">
            <input type="checkbox" name="_remember_me" id="_remember_me" class="h-4 w-4 text-white border-neutral-600 rounded bg-neutral-800">
            <label for="_remember_me" class="ml-2 text-sm text-neutral-400">Se souvenir de moi</label>
        </div>
        #}
    </div>
</div>
{% endblock %}
