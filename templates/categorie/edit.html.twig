{% extends 'base.html.twig' %}

{% block title %}Éditer la catégorie{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center px-4 bg-black">
    <div class="w-full max-w-md bg-neutral-900 p-8 rounded-2xl shadow-lg border border-neutral-800">
        
        <h1 class="text-3xl font-bold text-white mb-6 text-center">Éditer la catégorie</h1>

        {# Formulaire d'édition #}
        <div class="space-y-5">
            {{ include('categorie/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>

        {# Lien retour à la liste #}
        <div class="mt-6 text-center">
            <a href="{{ path('app_categorie_index') }}" 
               class="inline-block px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition">
               Retour à la liste
            </a>
        </div>

        {# Formulaire suppression #}
        <div class="mt-4 text-center">
            {{ include('categorie/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
